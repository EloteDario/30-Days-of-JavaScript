class Calculator {
    
    /** 
     * @param {number} value
     */
    constructor(value) {
        this.value = value
        this.cont = 0
    }
    
    /** 
     * @param {number} value
     * @return {Calculator}
     */
    add(value){
        this.value = value + this.value
        return this
    }
    
    /** 
     * @param {number} value
     * @return {Calculator}
     */
    subtract(value){
        this.value = this.value - value
        return this
    }
    
    /** 
     * @param {number} value
     * @return {Calculator}
     */  
    multiply(value) {
        this.value = value * this.value
        return this
    }
    
    /** 
     * @param {number} value
     * @return {Calculator}
     */
    divide(value) {
        if (value === 0) {
            this.cont += 1
        }
        this.value = this.value / value
        return this
        
    }
    
    /** 
     * @param {number} value
     * @return {Calculator}
     */
    power(value) {
        this.value =  this.value ** value
        return this
    }
    
    /** 
     * @return {number}
     */
    getResult() {
        if (this.cont > 0) {
            return "Division by zero is not allowed"
        }
        return this.value
    }
}
